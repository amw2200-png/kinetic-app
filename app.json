{
  "expo": {
    "name": "KINETIC",
    "slug": "kinetic-fitness",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#080c0a"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.kinetic.fitness",
      "infoPlist": {
        "NSCameraUsageDescription": "KINETIC uses your camera to track exercises using AI pose detection.",
        "NSPhotoLibraryUsageDescription": "KINETIC accesses photos for profile pictures."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#080c0a"
      },
      "package": "com.kinetic.fitness",
      "permissions": ["CAMERA", "RECORD_AUDIO"]
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "KINETIC uses your camera to track exercises using AI pose detection."
        }
      ]
    ]
  }
}
